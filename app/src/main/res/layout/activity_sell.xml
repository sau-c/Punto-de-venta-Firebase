<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activities.SellActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar o escanear ID..."
            android:textStyle="bold"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:textColorHint="@color/blue_500"
            android:textColor="@color/blue_500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:icon="@drawable/ic_search"
            app:iconSize="30dp"
            android:onClick="startSearch"/>

        <Button
            android:id="@+id/button_scan"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_camera"
            app:iconSize="30dp"
            android:onClick="startScan"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Producto"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/et_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:hint="..."
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Marca"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/et_marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:hint="..."
        android:inputType="text"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Precio"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/et_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:hint="..."
        android:inputType="numberDecimal"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Cantidad"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:hint="Ingrese la cantidad..."
        android:inputType="number"
        android:textStyle="bold"
        android:textColor="@color/blue_500"
        android:textColorHint="@color/blue_500"
        android:textSize="16sp" />

    <!-- BotÃ³n para guardar los datos -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Vender producto"
        android:textColor="@color/white"
        android:background="@color/red_500"
        android:textSize="16sp" />

</LinearLayout>