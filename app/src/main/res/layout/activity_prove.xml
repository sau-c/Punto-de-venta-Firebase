<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar o escanear ID..."
            android:textStyle="bold"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:textColorHint="@color/blue_500"
            android:textColor="@color/blue_500"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:icon="@drawable/ic_search"
            app:iconSize="30dp"
            android:onClick="startSearch"/>

        <Button
            android:id="@+id/button_scan"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_camera"
            app:iconSize="30dp"
            android:onClick="startScan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Producto: "
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="..."
            android:inputType="text"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:text="CONTAR"
        app:iconSize="30dp"
        android:backgroundTint="@color/green_500"
        android:onClick="countProduct" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_compare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="Ver discrepancias"
            android:textColor="@color/white"
            android:background="@color/red_500"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="Ver conteo"
            android:textColor="@color/white"
            android:background="@color/red_500"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:text="Conteo actual"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Cambios aquÃ­: Establece el peso del RecyclerView a 1 para ocupar el espacio restante -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_accesorio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_accesorio" />

</LinearLayout>
